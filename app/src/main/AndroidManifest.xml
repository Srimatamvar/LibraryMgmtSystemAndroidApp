<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firebasesample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StudentProfilePage"></activity>
        <activity android:name=".ProfilePage" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddAUser" />
        <activity android:name=".StudentIssuedBooks" />
        <activity android:name=".IssuedBooks" />
        <activity android:name=".AvailableBooks" />
        <activity android:name=".Dashboard" />
        <activity android:name=".ForStudent" />
        <activity android:name=".ForAdmin" />
        <activity android:name=".Register" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>